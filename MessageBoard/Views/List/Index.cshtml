@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>留言板-檢視留言</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="~/content/List.min.css" />
</head>
<body>
    <div id="main" class="container">
        editMessageID: {{editMessageID}}, editMajorID {{editMajorID}}
        |
        <button type="button" class="btn btn-primary" v-on:click="OpenCreateMessage(0)">建立新留言</button> |
        @Html.ActionLink("TEST 登入", "Index", "Login", null, new { @class = "btn btn-light" }) |
        <ul class="message-list">
            <li v-for="message in messages" class="message-list-item">
                <vue-message :message="message" v-on:clicked-edit="SetMessageID" v-on:clicked-create-message="SetMajorID"></vue-message>
                <vue-replycount :total="message.replyCount" :majorID="message.MajorID"></vue-replycount>
            </li>
        </ul>

        <!-- alert Message -->
        <div v-show="false" class="modal fade" id="dgMessage" role="dialog" data-backdrop="static">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">建立留言</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col col-sm-12 font-weight-bold">留言內容</div>
                        </div>
                        <div class="row">
                            <div class="col col-sm-12">
                                <textarea v-bind:class="{'form-control':true,'user-message':true, 'is-invalid':isOutOverMaxContent}" id="txtMessage" rows="5" v-model="messageContent" placeholder="請輸入留言內容"></textarea>
                                <small v-bind:class="{'form-text':true, 'text-muted':!isOutOverMaxContent,'invalid-feedback':isOutOverMaxContent}">上限 300 字，目前已經輸入 {{messageCount}} 個字</small><br />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col col-sm-3 text-left font-weight-bold">上傳圖片</div>
                            <div class="col col-sm-9 text-left">
                                <input type="file" name="messagePic" id="messagePic" ref="file" class="form-control user-message" v-on:change="CheckPics" />
                            </div>
                        </div>
                        <div v-if="editMessageID !== 0" class="row">
                            <div class="col col-sm-3 text-left font-weight-bold"></div>
                            <div class="col col-sm-9 text-left">
                                <br />
                                <ul>
                                    <li>
                                        <img src="https://placem.at/place?h=60&w=60" alt="留言圖片" :picid="0" />
                                        <button type="button" class="btn btn-sm btn-danger" v-on:click="DeleteMessagePic">刪除圖片</button>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <input type="hidden" id="hdMajorID" v-model="editMajorID" />
                        <input type="hidden" id="hdMessageID" v-model="editMessageID" />
                        <button type="button" class="btn btn-primary" :disabled="!isEnabledSave" v-on:click="SaveMessage">儲存</button>&nbsp;
                        <button type="button" class="btn btn-danger" data-dismiss="modal">關閉</button>
                    </div>
                </div>

            </div>
        </div>

        <div v-show="false" class="modal fade" id="dgDialog" role="dialog" data-backdrop="static">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    {{serverMsg}}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal" v-on:click="CloseDialog">關閉</button>
                </div>
            </div>

        </div>
    </div>

    <template id="replyCount-template">
        <div class="row row-footer">
            <div class="col col-sm-12 text-center">
                <div class="loading" v-if="isLoading">Loading...</div>
                <button class="btn btn-sm btn-light" data-show="1" :data-id="majorid" v-on:click="ToggleReply">{{isShowReply? hideTxt:showTxt}}({{total}})</button>
                <br />
                <div v-if="total === 0" class="replays text-center">目前沒有資料</div>
                <div v-if="total !== 0" class="text-right">
                    <ul v-for="message in replys" class=" message-list message-list-reply ">
                        <vue-message :message="message" v-on:clicked-edit="SetMessageID" v-on:clicked-create-message="SetMajorID"></vue-message>
                    </ul>
                </div>
            </div>
        </div>
    </template>

    <template id="userinfo-template">
        <div class="row row-title border-bottom">
            <div class="col col-sm-3 text-right">
                <img :src="userinfo.userIcon" alt="使用者頭像" />
            </div>
            <div class="col col-sm-8 text-left">
                {{userinfo.userName}}{{userinfo.order}}<br />
                連線 IP：{{userinfo.ip}}<br />
                {{userinfo.createDate}}<br />
            </div>
            <div class="col col-sm-1 text-right">
                <button v-show="userinfo.isShowDelete" type="button" class="btn btn-danger btn-sm" data-toggle="confirmation">刪除</button>
                <button v-show="userinfo.isShowEdit" type="button" class="btn btn-primary btn-sm" v-on:click="OpenEditMessage(userinfo.MessageID);">編輯</button>
                <button type="button" class="btn btn-info btn-sm" v-on:click="OpenCreateMessage(userinfo.MajorID)">回覆</button><br />
            </div>
        </div>
    </template>

    <template id="content-template">
        <div class="row row-content">
            <div class="col col-sm-1"></div>
            <div class="col col-sm-11 text-center">{{message.content}}</div>
        </div>
    </template>

    <template id="message-template">
        <li>
            <vue-userinfo :userinfo="message" v-on:clicked-edit="SetMessageID" v-on:clicked-create-message="SetMajorID"></vue-userinfo>
            <vue-content :message="message"></vue-content>
        </li>
    </template>

    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <script src="~/Scripts/vue.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="~/Scripts/FieldCheck.js"></script>
    <script src="~/Scripts/FileCheck.js"></script>
    <script src="~/Scripts/List.js"></script>
</body>
</html>
