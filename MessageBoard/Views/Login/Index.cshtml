@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title></title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <style>
        .arrow-danger::after {
            border-right-color: #dc3545 !important;
        }
    </style>
</head>
<body>
    <div id="main" class="container">
        @using (Html.BeginForm("userLogin", "Login", "post"))
        {
            <div class="alert alert-light">
                <div class="row form-group">
                    <div class="col-3 text-right font-weight-bold">
                        <label for="userName">使用者名稱</label>
                    </div>
                    <div class="col-6 text-left">
                        <input type="text" id="userName" name="userName" value="@TempData["UserName"]" class="form-control user-info" placeholder="使用者名稱" v-on:keyup="CheckUserName" v-on:blur="CheckUserName" />
                    </div>
                    <div class="col-3 text-left"></div>
                </div>
                <div class="row form-group">
                    <div class="col-3 text-right font-weight-bold">
                        <label for="userPw">使用者密碼</label>
                    </div>
                    <div class="col-6 text-left">
                        <input type="password" id="userPw" name="userPw" class="form-control user-info" placeholder="使用者密碼" v-on:keyup="CheckUserPw"  v-on:blur="CheckUserPw" />
                    </div>
                    <div class="col-3 text-left"></div>
                </div>
                <div class="row">
                    <div class="col-2"></div>
                    <div class="col-9">
                        <div class="alert alert-danger">
                            ※ 注意
                            <ul>
                                <li>使用者名稱為 20 字以內的中英數字</li>
                                <li>使用者密碼為 12 字內含各 1 個大小寫英文和數字</li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-2"></div>
                    <div class="col-6 text-center">
                        <input type="submit" class="btn btn-primary btn-login" value="登入" :disabled="!isEnabledSubmit" v-on:click="UserLogin" /></div>
                    <div class="col-4 text-center">
                        @Html.ActionLink("註冊", "Index", "Register", null, new { @class = "btn btn-light btn-sm" }) |
                        @Html.ActionLink("忘記密碼", "Index", "ForgetPW", null, new { @class = "btn btn-light btn-sm" })
                    </div>
                </div>
            </div>
        }

        @if (TempData["UserName"] != null)
        {
            // alert Message
            <div class="modal fade" id="dgLoginFail" tabindex="-1" role="dialog" aria-labelledby="dgLoginFail" aria-hidden="true">
                <div class="modal-dialog modal-dialog modal-sm" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="dgLoginFailTitle">登入訊息</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            使用者登入失敗，請檢查帳號和密碼
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-danger" data-dismiss="modal">關閉</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>


    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <script src="~/Scripts/vue.js"></script>
    <script src="~/Scripts/Login.js"></script>
</body>
</html>
