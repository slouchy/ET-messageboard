@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title></title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        @using (Html.BeginForm("userLogin", "Login", "post"))
        {
            <div class="alert alert-light">
                <div class="row form-group">
                    <div class="col-3 text-right">@Html.Label("userName", "使用者名稱")</div>
                    <div class="col-9 text-left">@Html.TextBox("userName", "", new { @class = "form-control", @placeholder = "使用者名稱" })</div>
                </div>
                <div class="row form-group">
                    <div class="col-3 text-right">@Html.Label("userPw", "使用者密碼")</div>
                    <div class="col-9 text-left">@Html.Password("userPw", "", new { @class = "form-control", @placeholder = "使用者密碼" })</div>
                </div>
                <div class="row">
                    <div class="col-2"></div>
                    <div class="col-10">
                        <div class="text-danger">
                            ※ 注意
                            <ul>
                                <li>使用者名稱為 20 字以內的中英數字</li>
                                <li>使用者密碼為 12 字內含各 1 個大小寫英文和數字</li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-2"></div>
                    <div class="col-6 text-center"><input type="submit" class="btn btn-primary" value="登入" /></div>
                    <div class="col-4 text-center">
                        <button type="button" class="btn btn-sm btn-Link">註冊</button> |
                        <button type="button" class="btn btn-sm btn-Link">忘記密碼</button>
                    </div>
                </div>
            </div>
        }

        @if (TempData["Message"] != null)
        {
            // alert Msg
            <div class="modal fade" id="dgLoginFail" tabindex="-1" role="dialog" aria-labelledby="dgLoginFail" aria-hidden="true">
                <div class="modal-dialog modal-dialog modal-sm" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="dgLoginFailTitle">登入訊息</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            使用者登入失敗，請檢查帳號和密碼
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-danger" data-dismiss="modal">關閉</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>


    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <script src="~/Scripts/vue.js"></script>
</body>
</html>
